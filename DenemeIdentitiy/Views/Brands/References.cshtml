@model IEnumerable<DenemeIdentitiy.Models.Brands>
@{
    ViewBag.Title = "References";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="simple-table">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                </div>
                <div class="card-body">
                    <div class="card-block">

                        @if (Model.Count() == 0)
                        {
                            <p>Kayıt Bulunamadı...</p>
                        }
                        else
                        {
                            <table class="table table-hover table-responsive-md-md">
                                <tr class="table-light">
                                    <th>
                                        @Html.DisplayNameFor(model => model.BrandName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.StartDate)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.EndDate)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.RegistrationPhoto)
                                    </th>

                                    <th></th>
                                </tr>
                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.BrandName)
                                        </td>


                                        <td>
                                            @Html.DisplayFor(modelItem => item.StartDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EndDate)
                                        </td>
                                        <td>
                                            <a href="~/upload/@item.RegistrationPhoto" target="_blank">@item.RegistrationPhoto</a>

                                        </td>
                                    </tr>

                                }

                            </table>
                        }

                    </div>
                </div>
            </div>
        
        </div>
    </div>
</section>

