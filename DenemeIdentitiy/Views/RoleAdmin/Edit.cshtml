@model DenemeIdentitiy.Models.RoleEditModel
@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    <input type="hidden" name="roleName" value="@Model.Role.Name" />
    <input type="hidden" name="roleId" value="@Model.Role.Id" />

        <section id="simple-table">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Kullanıcı Yetki Listesi</h4>
                    </div>
                    <div class="card-body">
                        <div class="panel panel-primary card-block">
                            <div class="panel-heading">

                            </div>
                            <table class="table table-striped">
                                @if (Model.NonMembers.Count() == 0)
                                {
                                    <tr><td colspan="2">Bu role Eklenebilecek kullanıcı yok</td></tr>
                                }
                                else
                                {
                                    <tr>
                                        <td>
                                            Kullanıcı
                                        </td>
                                        <td>Admin Rolüne Ekle</td>
                                    </tr>

                                    foreach (var item in Model.NonMembers)
                                    {
                                        <tr>
                                            <td>@item.UserName</td>
                                            <td>
                                                <input type="checkbox" name="IdsToAdd" value="@item.Id" />
                                            </td>
                                        </tr>
                                    }
                                }
                            </table>
                        </div>


                        <div class="col-sm-12">
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title">@Model.Role.Name Listesi</h4>
                                </div>
                            </div>

                            <table class="table table-striped">
                                @if (Model.Members.Count() == 0)
                                {
                                    <tr><td colspan="2">Bu role eklenmiş kullanıcı yok</td></tr>
                                }
                                else
                                {
                                    <tr>
                                        <td>
                                            Kullanıcı
                                        </td>
                                        <td> @Model.Role.Name Rolünden Çıkar</td>
                                    </tr>

                                    foreach (var item in Model.Members)
                                    {
                                        <tr>
                                            <td>@item.UserName</td>
                                            <td>
                                                <input type="checkbox" name="IdsToDelete" value="@item.Id" />
                                            </td>
                                        </tr>
                                    }
                                }
                            </table>
                        </div>
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </div>
                </div>
            </div>
        </section>
}

