@model DenemeIdentitiy.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/LoginLayout.cshtml";
}

<h2 style="color:whitesmoke; margin-top:40px;">Giriş Yap</h2>

<hr />

@Html.ValidationSummary()
<div class="col-12 d-flex align-items-center justify-content-center">
        <div class="card-body">
            <div class="card-block">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />

                    <div class="form-group">
                        @Html.TextBoxFor(i => i.UserName, new { @class = "from-control",@placeholder ="Kullanıcı Adı" })
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(i => i.Password, new { @class = "from-control", @placeholder = "Parola" })
                    </div>

                    <div class="form-group">
                        <label>Beni Hatırla</label>
                        @Html.CheckBoxFor(i => i.Remeberme, new { @class = "from-control" })
                    </div>
                    <button class="btn btn-primary">Giriş</button>
                }

            </div>
        </div>
</div>


